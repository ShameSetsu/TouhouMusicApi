{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src", 
    "sourceMap": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017"]
  },
  "files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "src/angular/*"
  ],
}